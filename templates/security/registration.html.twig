{% extends "base.html.twig" %}

{% block body %}
	<h1>Créer un compte</h1>
	<hr>
	{{ form_start(form) }}
	{{ form_row(form.fullname, {'attr': {'placeholder': "Nom et prénom"}}) }}
	{{ form_row(form.email, {'attr': {'placeholder': "Adresse email"}}) }}
	{{ form_row(form.password, {'attr': {'placeholder': "Mot de passe"}}) }}
	{{ form_row(form.confirmPassword, {'attr': {'placeholder': "Confirmation du mot de passe"}}) }}

	<button type="submit" class="btn btn-success">Inscription</button>

	{{ form_end(form) }}
{% endblock %}
