{% extends 'base.html.twig' %}

{% block title %}
	{{ parent() }} | {{ user.fullname }}
{% endblock %}

{% block body %}
    <div class="row g-0">
        <div class="col-3 text-center">
            <img src="{{ asset('uploads/avatars/' ~ user.avatar) }}" class="img-fluid rounded-circle" alt="Photo de profil de {{ user.fullname }}}">
            <p class="card-text"><a href="{{ path('user_edit', { 'id' : user.id }) }}" class="text-decoration-none small">(Modifier)</a></p>
        </div>
        <div class="col-9">
            <div class="card-body">
                <h5 class="card-title">{{ user.fullname }}</h5>
                <p class="card-text">{{ user.email }}</p>
                <p class="card-text"><small class="text-muted">Inscrit le {{ user.createdAt | date('d/m/Y Ã  H:i', 'Europe/Paris') }}</small></p>
                <p class="card-text"><a href="{{ path('user_delete', {'id' : user.id}) }}" class="link-danger text-decoration-none" onclick="return window.confirm('Voulez-vous vraiment supprimer votre compte ?')">Supprimer</a></p>
            </div>
        </div>
    </div>

{% endblock %}
